<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="99dp"
        android:orientation="vertical" android:layout_weight="0.67"
        tools:ignore="InefficientWeight">


        <TextView
            android:id="@+id/txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="right"
            android:paddingRight="10sp"
            android:paddingTop="5sp"
            android:textSize="15pt"
            android:textStyle="bold"
            tools:ignore="NestedWeights,RtlHardcoded,RtlSymmetry" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#808080">



        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Reset"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#808080"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".40"
            android:text="DEL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#808080"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/btnSeven"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"

            android:text="7"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnEight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="8"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnNine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="9"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#808080"
            android:text="÷"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="operandGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnFour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="4"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnFive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnSix"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="6"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnMult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#808080"
            android:text="×"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="operandGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnTwo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnThree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="valueGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#808080"
            android:text="−"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="operandGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/btnDec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="."
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="operandGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="operandGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnEql"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BCC6CC"
            android:text="="
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,HardcodedText" />


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#808080"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="operandGetterOnClick"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

</LinearLayout>